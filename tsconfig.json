{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": [
    "src"
  ]
}
